{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,

  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "biovaulthealth.com"
        }
      ],
      "destination": "https://www.biovaulthealth.com/:1",
      "permanent": true
    }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ],

  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "blog/*.html", "use": "@vercel/static" }
  ],

  "routes": [
    { "src": "/pinealxt", "dest": "/pinealxt.html" },
    { "src": "/moringa", "dest": "/moringa.html" },
    { "src": "/digestsync", "dest": "/digestsync.html" },
    { "src": "/glucotrust", "dest": "/glucotrust.html" },
    { "src": "/prodentim", "dest": "/prodentim.html" },
    { "src": "/gutoptim", "dest": "/gutoptim.html" },
    { "src": "/blog/(.*)", "dest": "/blog/$1" },
    { "src": "/pinealxt-clean-foods", "dest": "/pinealxt-clean-foods.html" },
    { "src": "/pinealxt-clean-foods-opt-in", "dest": "/pinealxt-clean-foods.html" },
    { "src": "/privacy-policy", "dest": "/privacy-policy.html" },
    { "src": "/terms-of-service", "dest": "/terms-of-service.html" },
    { "src": "/thank-you", "dest": "/thank-you.html" },

    { "handle": "filesystem" },
    { "src": "/.*", "status": 404, "dest": "/404.html" },
    { "src": "/500", "status": 500, "dest": "/500.html" }
  ]
}
